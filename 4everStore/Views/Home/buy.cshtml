@using Microsoft.AspNetCore.Identity

@model _4everStore.Models.view.requestAndIteam
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>buy</h1>


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="~/images/@Model.Iteam.img1" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@Model.Iteam.Name</h5>
                            <!-- Product price-->
                            @Model.Iteam.Description
                        </div>
                    </div>


                </div>
            </div>

        </div>
        <div class="mid">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="request.name" class="control-label">الاسم</label>
                        <input asp-for="request.name" class="form-control" />
                        <span asp-validation-for="request.name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="request.city" class="control-label">المحافظة</label>
                        <input asp-for="request.city" class="form-control" />
                        <span asp-validation-for="request.city" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="request.descripon" class="control-label">العنوان مع الملاحظات</label>
                        <input asp-for="request.descripon" class="form-control" />
                        <span asp-validation-for="request.descripon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="request.phonenumber" class="control-label">رقم الهاتف</label>
                        <input asp-for="request.phonenumber" class="form-control" />
                        <span asp-validation-for="request.phonenumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="request.Quantity" class="control-label">الكمية</label>
                        <input asp-for="request.Quantity" class="form-control" />
                        <span asp-validation-for="request.Quantity" class="text-danger"></span>
                    </div>
                    <input asp-for="request.iteamId" class="form-control" value="@Model.Iteam.Id"  hidden="hidden" />
                 
                    <button type="submit" class="btn btn-primary">Add</button>


                </form>

            </div>
        </div>

    </div>
    






</section>

